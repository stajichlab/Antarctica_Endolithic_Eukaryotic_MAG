#!/usr/bin/bash -l
#SBATCH -p short -c 96 --mem 32gb -C ryzen

module load barrnap
module load ITSx
CPU=24
for a in $(ls ../genomes_zygolife/*.fa)
do 
	base=$(basename $a .scaffolds.fa)
	python Extract-ITS-sequences-from-a-fungal-genome/extractITS.py  -i $a -o $base.ITS1 -which ITS1 -cpu $CPU
	python Extract-ITS-sequences-from-a-fungal-genome/extractITS.py  -i $a -o $base.ITS2  -which ITS1 -cpu $CPU
done
SCRIPT=
parallel -j 4 python 
